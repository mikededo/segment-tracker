{
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^@shared/(.*)$": ["<rootDir>/src/shared/$1"]
  },
  "modulePaths": ["<rootDir>"],
  "rootDir": ".",
  "roots": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
